                   styleClass="search-box" stylesheets="@../css/style.css"/>
        <ImageView fitHeight="17.0" fitWidth="16.0" layoutX="905.0" layoutY="36.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@../images/search.png"/>
        </ImageView>
        <CheckBox fx:id="filterChckBx" layoutX="790.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleFilter"
                  text="show only joined groups">
            <font>
                <Font size="11.0"/>
            </font>
        </CheckBox>
    </Pane>
